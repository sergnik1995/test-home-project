{% extends 'base.html.twig' %}
{% block body %}
    <div class="card">
        <div class="card-header">
            Тест
        </div>
        <div class="card-body">
            <h5 class="card-title">{{ test.name }}</h5>
            <h6 class="card-title">Время прохождения: {{ test.time == 0 ? 'Неограниченно' : test.time }}</h6>
            <h6 class="card-title">Вопросов: {{ test.questions.count }}</h6>
            <p class="card-text">{{ test.description }}</p>
            <a href="/test/{{ test.id }}/question" class="btn btn-primary">Начать прохождение</a>
        </div>
    </div>
{% endblock %}